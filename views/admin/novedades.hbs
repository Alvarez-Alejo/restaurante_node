<div class="container" style="margin-top: 100px;">

  {{!--fila1--}}
  <div class="row">
    <div class="col">
      <p class="text-end">
        <span>Hola {{usuario}}!</span>
        <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesion <i class="fas fa-sign-out-alt"></i></a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-7">
      <h3>Listado de Novedades</h3>
    </div>
    <div class="col-2 text-right">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
    </div>
    <div class="col-3 text-right">
      <form class"form-inline" action="/admin/novedades" method="get">
        <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}
          value="{{q}}" {{/if}}>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fa fa-search" aria-hidden="true"></i>
        </button>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Subtitulo</th>
            <th scope="col">Cuerpo</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td>{{subtitulo}}</td>
            <td>{{cuerpo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" title="Editar" class="btm btn-sm btn-secondary"><i
                  class="fa fa-pencil"></i></a>
              <a href="/admin/novedades/eliminar/{{id}}" title="Eliminar" class="btm btn-sm btn-secondary"><i
                  class="fa fa-trash"></i></a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{#if is_search}}
      {{#unless novedades.lenght}}
      No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}
    </div>
  </div>
